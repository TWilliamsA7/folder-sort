{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "ucrt64-base",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "ucrt64-vscode",
      "displayName": "MSYS2 UCRT64 (VS Code)",
      "inherits": "ucrt64-base",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "C:/msys64/ucrt64/bin/gcc.exe",
        "CMAKE_CXX_COMPILER": "C:/msys64/ucrt64/bin/g++.exe"
      },
      "environment": {
        "PATH": "C:/msys64/ucrt64/bin"
      }
    },
    {
      "name": "ucrt64-ci",
      "displayName": "MSYS2 UCRT64 (CI)",
      "inherits": "ucrt64-base",
      "binaryDir": "${sourceDir}/build"
    },
    {
      "name": "msvc-base",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTS": "OFF",
        "USE_SYSTEM_DEPENDENCIES": "OFF"
      }
    },
    {
      "name": "msvc-vscode",
      "displayName": "MSVC (Release, VS Code)",
      "inherits": "msvc-base",
      "binaryDir": "${sourceDir}/build-msvc"
    },
    {
      "name": "msvc-ci",
      "displayName": "MSVC (CI)",
      "inherits": "msvc-base",
      "binaryDir": "${sourceDir}/build-msvc"
    }
  ],
  "buildPresets": [
    { "name": "vscode", "configurePreset": "ucrt64-vscode" },
    { "name": "ci", "configurePreset": "ucrt64-ci" },
    { "name": "msvc-vscode", "configurePreset": "msvc-vscode" },
    { "name": "msvc-ci", "configurePreset": "msvc-ci" }
  ],
  "testPresets": [
    {
      "name": "vscode",
      "configurePreset": "ucrt64-vscode",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "ci",
      "configurePreset": "ucrt64-ci",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "msvc",
      "configurePreset": "msvc-vscode",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
